 #cr√©ation de SG pour autoriser les traffics E/S
resource "aws_security_group" "instance_sg" {
    name = "jenkinsSG"

    egress {
        from_port       = 0
        to_port         = 0
        protocol        = "-1"
        cidr_blocks     = ["0.0.0.0/0"]
    }

    ingress {
        from_port   = 80
        to_port     = 80
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
    }
}
